//-Menu responsive
block config
  include config.pug

mixin navigationOffCanvas(menu)
  section.Header
    section.Header-container
      h1.Logo
        a.Logo-link(href="./")
      a.Panel-button(href="#")
        button.hamburger.hamburger--spring(type="button")
          span.hamburger-box
            span.hamburger-inner
      aside.Panel
        nav.Menu
          ul.Menu-listItem
            each item in menu
              li.Menu-item
                .clipContainer
                  .clipInterno
                    .clipAnim
                      a.Menu-link(href=`${item[1]}`)= item[0]
                        //- i(class="fa fa"+`${item[2]}`)

